#include <stdio.h>
#include <stdlib.h>

void sol(int n, int cost[])
{
    if(n==0)
    {
        printf("Action not possible\n");
    }
    int sm = INT16_MAX;
    for(int i=0; i<n; i++)
    {
        if(sm > cost[i])
        {
            sm = cost[i];
        }
    }
    if(n>1)
    {
        sm = (n-1)*sm;
    }
    printf("Minimum cost is %d\n",sm);
}   

int main()
{
    int t; // number of testcases
    while(t--)
    {
        int n; // number of chocolates
        int cost[n]; // cost of each chocolates
        for(int i=0; i<n; i++)
        {
            scanf("%d",&cost[i]);
        }

        // output
        sol(n,cost);
    }
}